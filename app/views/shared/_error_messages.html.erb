<% if target.errors.any? %>  
  <div id="errorExplanation">  
    <span class="notice_fail_error_explanation"><%= pluralize(target.errors.count, "error") %> need to be corrected before this record can be saved.</span>
    <ul class="error_ul">
      <% target.errors.full_messages.each do |msg| %>  
        <li><%= msg %></li>  
      <% end %>  
    </ul>
  </div>  
<% end %>