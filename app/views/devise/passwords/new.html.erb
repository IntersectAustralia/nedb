<% title 'Forgot Your Password?' %>

<p>Please enter your email address below and reset instructions will be sent to you.</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= render "shared/error_messages", :target => @user %>
    
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="hr"></div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
<br/>
<br/>

<%= render :partial => "devise/shared/links" %>
