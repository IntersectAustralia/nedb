<%= form_for([@species, @subspecies]) do |f| %>
  <%= render "shared/error_messages", :target => @subspecies %>

  <div class="field">
    <%= f.label :subspecies %>
    <%= f.text_field :subspecies %>
  </div>
  <div class="field">
    <%= f.label :authority %>
    <%= f.text_field :authority %>
  </div>

  <div class="hr"></div>

  <div class="actions">
    <%= f.submit %>
    &nbsp;
    <%= link_to 'Cancel', @species %>
  </div>

<% end %>
