<%= form_for([@species, @form], :url => url) do |f| %>
  <%= render "shared/error_messages", :target => @form %>

  <div class="field">
    <%= f.label :form %>
    <%= f.text_field :form %>
  </div>
  <div class="field">
    <%= f.label :authority %>
    <%= f.text_field :authority %>
  </div>

  <div class="hr"></div>

  <div class="actions">
    <%= f.submit %>
    &nbsp;
    <%= link_to 'Cancel', @species %>
  </div>

<% end %>
